@model IEnumerable<Filminurk.Models.Actors.ActorsIndexViewModel>
@{
	int rowNumber = 1;
}

<div>
	<a asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary">Add Actor</a>
</div>
<div class="h1">
	Näitlejad
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">FirstName</th>
				<th scope="col">LastName</th>
				<th scope="col">NickName</th>
				<th scope="col">Age</th>
				<th scope="col">MoviesActedFor</th>
				<th scope="col">Addiction</th>
				<th scope="col">Crimes</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var actors in Model)
			{
				<tr>					
					<td>@actors.FirstName</td>
					<td>@actors.LastName</td>
					<td>@actors.Nickname</td>
					<td>@actors.Age</td>
					<td>@actors.MoviesActedFor</td>
					<td>@actors.Addiction</td>
					<td>@actors.Crimes</td>
					<td>
						<a asp-action="Details" asp-controller="Actors"  class="btn btn-outline-danger">Details</a>
						<a asp-action="Update" asp-controller="Actors"  class="btn btn-outline-primary">Update</a>
						<a asp-action="Delete" asp-controller="Actors" class="btn btn-outline-primary">Delete</a>
					</td>

				</tr>
				rowNumber += 1;
			}

		</tbody>
	</table>
</form>