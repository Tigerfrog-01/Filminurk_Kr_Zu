

@model Filminurk.Models.Movies.MoviesCreateViewModel

<h1>Lisa Film</h1>
<div>

	<form method="post=" enctype="multipart/form-data">
	<input asp-for="ID" type="hidden"/>
	<input asp-for="EntryCreatedAt" type="hidden"/>
	<input asp-for="EntryModifedAt" type="hidden" />T

	<div class="from-group row">
		<label asp-for="Title" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Title" class="form-control" />
		</div>
	</div>

		<div class="from-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Description" class="form-control" />
			</div>
		</div>

		<div class="from-group row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstPublished" class="form-control" />
			</div>
		</div>

		<div class="from-group row">
			<label asp-for="Director" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Director" class="form-control" />
			</div>
		</div>

		<div class="from-group row">
			<label asp-for="Actors" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Actors" class="form-control" />
			</div>
		</div>

		<div class="from-group row">
			<label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="CurrentRating" class="form-control" />
			</div>
		</div>

		<div class="from-group row">
			<label asp-for="Genre" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<select asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre"()>
					<option value="">-- Vali Zanr</option>
				</select>
					<span asp-validation-for="Genre"></span>
				
			</div>
		</div>

		<div class="from-group row">
			<label asp-for="AgeRating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="AgeRating" class="form-control" />
			</div>
		</div>

		<div class="from-group row">
			<label asp-for="IMDBrating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="IMDBrating" class="form-control" />
			</div>
		</div>

		<input asp-action="Create" asp-controller="Movies" type="submit" />



	</form>


</div>

